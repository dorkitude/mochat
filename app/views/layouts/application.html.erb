<!DOCTYPE html>
<html>
<head>
  <title>Mochat</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>


  <div id="flashes">
    <%- flash.each do |key, msg| -%>
      <div  class="flash <%= key %>">
        <%= msg %>
      </div>
    <%- end -%>
  </div> <!-- #flashes -->

  <%= yield %>

</body>
</html>
